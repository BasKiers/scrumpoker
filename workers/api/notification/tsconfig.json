{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
} 